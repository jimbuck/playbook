{
  "compileOnSave": true,
  "compilerOptions": {
    "module": "commonjs",
    "target": "es6",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "inlineSourceMap": true,
    "removeComments": false,
    "rootDir": "src",
    "outDir": "dist"
  },
  "exclude": [
    "node_modules",
    "typings",
    "dist"
  ]
}
{
  "name": "@jimmyboh/playbook",
  "version": "0.9.0",
  "description": "A simple tool for running multiple projects at once.",
  "main": "index.js",
  "bin": {
    "pb": "./dist/bin/pb.js",
    "playbook": "./dist/bin/pb.js"
  },
  "scripts": {
    "clean": "rimraf ./dist/** ./coverage",
    "build": "tsc",
    "watch": "concurrently npm:watch:*",
    "watch:build": "tsc --watch",
    "watch:test": "ava --watch",
    "test": "tsc && nyc --color -a ava -v",
    "coverage": "nyc report --reporter=text-lcov | coveralls",
    "preversion": "npm test",
    "version": "git add -A",
    "postversion": "git push && git push --tags && npm publish --access=public"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/JimmyBoh/playbook.git"
  },
  "author": "Jim Buck <jim@jimmyboh.com>",
  "license": "GPL-3.0",
  "bugs": {
    "url": "https://github.com/JimmyBoh/playbook/issues"
  },
  "homepage": "https://github.com/JimmyBoh/playbook#readme",
  "devDependencies": {
    "@types/conf": "^1.4.0",
    "@types/minimist": "^1.2.0",
    "@types/node": "^10.9.4",
    "@types/pify": "^3.0.2",
    "@types/update-notifier": "^2.2.0",
    "ava": "^0.25.0",
    "concurrently": "^4.0.1",
    "coveralls": "^3.0.2",
    "nyc": "^13.0.1",
    "rimraf": "^2.6.2",
    "typescript": "^3.0.3"
  },
  "dependencies": {
    "ansi-escapes": "^3.1.0",
    "chalk": "^2.4.1",
    "conf": "^2.0.0",
    "fs-jetpack": "^2.1.0",
    "update-notifier": "^2.5.0",
    "vorpal": "^1.12.0"
  },
  "ava": {
    "files": [
      "./dist/**/*.spec.js"
    ],
    "source": [
      "./dist/**/*.js"
    ]
  },
  "nyc": {
    "include": [
      "dist/**/*.js"
    ],
    "exclude": [
      "dist/**/*.spec.js",
      "dist/**/*.d.ts",
      "dist/index.js",
      "dist/bin/*",
      "coverage/**",
      "node_modules/**"
    ]
  }
}
